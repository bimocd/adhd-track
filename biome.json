{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!node_modules",
      "!.next",
      "!dist",
      "!build"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "useLiteralKeys": "info"
      },
      "a11y": {
        "noNoninteractiveTabindex": "info"
      },
      "correctness": {
        "useExhaustiveDependencies": "info"
      },
      "recommended": true,
      "suspicious": {
        "noArrayIndexKey": "info",
        "noExplicitAny": "info",
        "noDocumentCookie": "info",
        "noUnknownAtRules": "info"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}